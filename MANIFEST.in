# Include documentation and metadata
include README.md
include LICENSE
include pyproject.toml
include requirements.txt

# Include version file
include pyehicle/_version.py

# Include type marker
include pyehicle/py.typed

# Include all Python files
recursive-include pyehicle *.py

# Exclude test files and cache
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .pytest_cache

# Exclude development files
exclude .gitignore
exclude .git

# Exclude images and logo (kept in GitHub but not in PyPI package)
exclude *.png
exclude *.jpg
exclude *.jpeg
exclude *.gif
exclude logo.png
